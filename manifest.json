{
  "name": "Share to Gemini",
  "short_name": "GeminiShare",
  "start_url": "./",
  "display": "standalone",
  "background_color": "#121212",
  "theme_color": "#1e1e1e",
  "description": "Share images to Gemini for text extraction and search.",
  "icons": [
    {
      "src": "icon-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "icon-512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "share_target": {
    "action": "./_share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "image",
          "accept": [
            "image/*",
            ".png",
            ".jpg",
            ".jpeg",
            ".webp",
            ".gif"
          ]
        }
      ]
    }
  }
}