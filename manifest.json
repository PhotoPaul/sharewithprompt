{
  "name": "Share to Gemini",
  "short_name": "GeminiShare",
  "start_url": "./",
  "display": "standalone",
  "background_color": "#121212",
  "theme_color": "#1e1e1e",
  "description": "Share images to Gemini for text extraction and search.",
  "icons": [
    {
      "src": "https://via.placeholder.com/192/bb86fc/000000?text=GS",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "https://via.placeholder.com/512/bb86fc/000000?text=GS",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "share_target": {
    "action": "./share-target/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "image",
          "accept": ["image/*", ".png", ".jpg", ".jpeg", ".webp", ".gif"]
        }
      ]
    }
  }
}
